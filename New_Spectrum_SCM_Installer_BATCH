@echo off

set SCRIPT="%TEMP%\%RANDOM%-%RANDOM%-%RANDOM%-%RANDOM%.vbs"

echo Set oWS = WScript.CreateObject("WScript.Shell") >> %SCRIPT%
echo sLinkFile = "C:\Documents and Settings\All Users\Desktop\StartUI.lnk" >> %SCRIPT%
echo Set oLink = oWS.CreateShortcut(sLinkFile) >> %SCRIPT%
echo oLink.TargetPath = "C:\SpectrumSCM\Spectrum_Startup.vbs" >> %SCRIPT%
echo oLink.IconLocation = "C:\SpectrumSCM\Scm.ico" >> %SCRIPT%
echo oLink.Save >> %SCRIPT%

echo Dim oFSO >> %SCRIPT%
echo Set oFSO = CreateObject("Scripting.FileSystemObject") >> %SCRIPT%
echo oFSO.CreateFolder "C:\Documents and Settings\All Users\Start Menu\Programs\SpectrumSCM" >> %SCRIPT%

echo sLinkFile = "C:\Documents and Settings\All Users\Start Menu\Programs\SpectrumSCM\StartUI.lnk" >> %SCRIPT%
echo Set oLink = oWS.CreateShortcut(sLinkFile) >> %SCRIPT%
echo oLink.TargetPath = "C:\SpectrumSCM\Spectrum_Startup.vbs" >> %SCRIPT%
echo oLink.IconLocation = "C:\SpectrumSCM\Scm.ico" >> %SCRIPT%
echo oLink.Save >> %SCRIPT%

cscript /nologo %SCRIPT%
del %SCRIPT%
